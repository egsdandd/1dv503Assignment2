<section class="cart-page card">
  <h1>Shopping Cart</h1>

  <p>
    Order #: <strong><%= orderId %></strong><br>
    Order date: <strong><%= orderDate.toDateString() %></strong><br>
    Delivery date: <strong><%= deliveryDate.toDateString() %></strong>
  </p>

  <p>
    Delivery address:<br>
    <strong><%= address.street %></strong><br>
    <%= address.zip %> <%= address.city %>
  </p>

  <table class="cart-table">
    <thead>
      <tr>
        <th>ISBN</th>
        <th>Title</th>
        <th>$</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(function (item) { %>
        <tr>
          <td><%= item.isbn %></td>
          <td><%= item.title %></td>
          <td>$<%= item.price.toFixed(2) %></td>
          <td><%= item.qty %></td>
          <td>$<%= item.total.toFixed(2) %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <p class="cart-grand-total">
    Total: $<%= grandTotal.toFixed(2) %>
  </p>
</section>
